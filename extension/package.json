{
  "name": "aura",
  "displayName": "Aura - AI Development Assistant",
  "description": "Local-first AI assistant for knowledge work",
  "version": "1.0.0",
  "publisher": "aura",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnazariah/aura"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aura",
          "title": "Aura",
          "icon": "resources/aura-icon.svg"
        }
      ]
    },
    "views": {
      "aura": [
        {
          "id": "aura.status",
          "name": "System Status"
        },
        {
          "id": "aura.workflows",
          "name": "Workflows"
        },
        {
          "id": "aura.agents",
          "name": "Agents"
        }
      ]
    },
    "commands": [
      {
        "command": "aura.refreshStatus",
        "title": "Refresh Status",
        "icon": "$(refresh)"
      },
      {
        "command": "aura.startServices",
        "title": "Start Aura Services",
        "icon": "$(play)"
      },
      {
        "command": "aura.stopServices",
        "title": "Stop Aura Services",
        "icon": "$(debug-stop)"
      },
      {
        "command": "aura.executeAgent",
        "title": "Execute Agent",
        "icon": "$(run)"
      },
      {
        "command": "aura.quickExecute",
        "title": "Aura: Execute Agent",
        "icon": "$(run)"
      },
      {
        "command": "aura.selectAgent",
        "title": "Select Agent",
        "icon": "$(symbol-event)"
      },
      {
        "command": "aura.openChat",
        "title": "Aura: Open Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "aura.indexWorkspace",
        "title": "Aura: Index Workspace for RAG",
        "icon": "$(database)"
      },
      {
        "command": "aura.showRagStats",
        "title": "Aura: Show RAG Statistics",
        "icon": "$(info)"
      },
      {
        "command": "aura.clearRagIndex",
        "title": "Aura: Clear RAG Index",
        "icon": "$(trash)"
      },
      {
        "command": "aura.createWorkflow",
        "title": "Aura: Create Workflow",
        "icon": "$(add)"
      },
      {
        "command": "aura.openWorkflow",
        "title": "Open Workflow",
        "icon": "$(window)"
      },
      {
        "command": "aura.executeStep",
        "title": "Execute Step",
        "icon": "$(run)"
      },
      {
        "command": "aura.refreshWorkflows",
        "title": "Refresh Workflows",
        "icon": "$(refresh)"
      },
      {
        "command": "aura.deleteWorkflow",
        "title": "Delete Workflow",
        "icon": "$(trash)"
      },
      {
        "command": "aura.showHelp",
        "title": "Aura: Show Help",
        "icon": "$(question)"
      },
      {
        "command": "aura.openDocs",
        "title": "Aura: Open Documentation",
        "icon": "$(book)"
      },
      {
        "command": "aura.showCheatSheet",
        "title": "Aura: Quick Reference",
        "icon": "$(note)"
      },
      {
        "command": "aura.openGettingStarted",
        "title": "Aura: Getting Started",
        "icon": "$(rocket)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aura.refreshStatus",
          "when": "view == aura.status",
          "group": "navigation"
        },
        {
          "command": "aura.refreshWorkflows",
          "when": "view == aura.workflows",
          "group": "navigation"
        },
        {
          "command": "aura.createWorkflow",
          "when": "view == aura.workflows",
          "group": "navigation"
        },
        {
          "command": "aura.refreshStatus",
          "when": "view == aura.agents",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aura.indexWorkspace",
          "when": "view == aura.status && viewItem == indexHealth",
          "group": "inline"
        },
        {
          "command": "aura.indexWorkspace",
          "when": "view == aura.status && viewItem == rag",
          "group": "inline"
        },
        {
          "command": "aura.executeAgent",
          "when": "view == aura.agents && viewItem == agent",
          "group": "inline"
        },
        {
          "command": "aura.executeStep",
          "when": "view == aura.workflows && viewItem == step",
          "group": "inline"
        },
        {
          "command": "aura.deleteWorkflow",
          "when": "view == aura.workflows && viewItem == workflow",
          "group": "inline"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aura.createWorkflow",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "aura.openChat",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a"
      },
      {
        "command": "aura.quickExecute",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e"
      },
      {
        "command": "aura.indexWorkspace",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "aura.showHelp",
        "key": "ctrl+shift+/",
        "mac": "cmd+shift+/"
      }
    ],
    "walkthroughs": [
      {
        "id": "aura.gettingStarted",
        "title": "Get Started with Aura",
        "description": "Learn how to use Aura for AI-assisted development",
        "steps": [
          {
            "id": "aura.walkthrough.checkServices",
            "title": "Check Services are Running",
            "description": "Aura needs its backend services running. Check the **System Status** panel to see if API and Ollama are connected.\n\n[Check Status](command:aura.refreshStatus)",
            "media": {
              "markdown": "resources/walkthrough/check-services.md"
            }
          },
          {
            "id": "aura.walkthrough.indexCode",
            "title": "Index Your Codebase",
            "description": "Index your project so Aura understands your code. This powers semantic search and code-aware chat.\n\n[Index Workspace](command:aura.indexWorkspace)",
            "media": {
              "markdown": "resources/walkthrough/index-code.md"
            }
          },
          {
            "id": "aura.walkthrough.tryChat",
            "title": "Try Code-Aware Chat",
            "description": "Ask questions about your codebase. Aura will search your indexed code and provide contextual answers.\n\n[Open Chat](command:aura.openChat)",
            "media": {
              "markdown": "resources/walkthrough/try-chat.md"
            }
          },
          {
            "id": "aura.walkthrough.createWorkflow",
            "title": "Create Your First Workflow",
            "description": "Workflows are multi-step development tasks. Describe what you want to build and Aura creates a plan.\n\n[Create Workflow](command:aura.createWorkflow)",
            "media": {
              "markdown": "resources/walkthrough/create-workflow.md"
            }
          },
          {
            "id": "aura.walkthrough.learnMore",
            "title": "Learn More",
            "description": "Explore the full documentation for detailed guides on workflows, chat, and all features.\n\n[Open Documentation](command:aura.openDocs)",
            "media": {
              "markdown": "resources/walkthrough/learn-more.md"
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "Aura",
      "properties": {
        "aura.apiUrl": {
          "type": "string",
          "default": "http://localhost:5300",
          "description": "URL for the Aura API"
        },
        "aura.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "URL for the Ollama service"
        },
        "aura.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh status every 10 seconds"
        },
        "aura.executionTimeout": {
          "type": "number",
          "default": 120000,
          "description": "Timeout in milliseconds for agent execution (default: 2 minutes)"
        },
        "aura.workflowTimeout": {
          "type": "number",
          "default": 60000,
          "description": "Timeout in milliseconds for workflow operations like creation (default: 1 minute)"
        },
        "aura.indexingTimeout": {
          "type": "number",
          "default": 300000,
          "description": "Timeout in milliseconds for RAG indexing operations (default: 5 minutes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "ui-test": "extest setup-and-run out/ui-test/uiTest.js --code_version max --code_settings ./test-settings.json",
    "ui-test:setup": "extest get-vscode --code_version max && extest get-chromedriver",
    "ui-test:run": "extest run-tests out/ui-test/uiTest.js",
    "compile:tests": "tsc -p tsconfig.test.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "mocha": "^11.7.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vscode-extension-tester": "^8.19.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
