{
  "name": "aura",
  "displayName": "Aura - AI Development Assistant",
  "description": "Local-first AI assistant for knowledge work",
  "version": "1.5.0",
  "publisher": "aura",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnazariah/aura"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "mcpServerDefinitionProviders": [
      {
        "id": "aura.context",
        "label": "Aura Codebase Context"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aura",
          "title": "Aura",
          "icon": "resources/aura-icon.svg"
        }
      ]
    },
    "views": {
      "aura": [
        {
          "id": "aura.welcome",
          "name": "Welcome",
          "icon": "$(rocket)",
          "when": "!aura.workspaceOnboarded"
        },
        {
          "id": "aura.status",
          "name": "System Status",
          "icon": "$(pulse)"
        },
        {
          "id": "aura.stories",
          "name": "Stories",
          "icon": "$(tasklist)",
          "when": "aura.workspaceOnboarded"
        },
        {
          "id": "aura.research",
          "name": "Research Library",
          "icon": "$(book)"
        }
      ]
    },
    "commands": [
      {
        "command": "aura.refreshStatus",
        "title": "Refresh Status",
        "icon": "$(refresh)"
      },
      {
        "command": "aura.startServices",
        "title": "Start Aura Services",
        "icon": "$(play)"
      },
      {
        "command": "aura.stopServices",
        "title": "Stop Aura Services",
        "icon": "$(debug-stop)"
      },
      {
        "command": "aura.indexWorkspace",
        "title": "Aura: Index Workspace for RAG",
        "icon": "$(database)"
      },
      {
        "command": "aura.showRagStats",
        "title": "Aura: Show RAG Statistics",
        "icon": "$(info)"
      },
      {
        "command": "aura.clearRagIndex",
        "title": "Aura: Clear RAG Index",
        "icon": "$(trash)"
      },
      {
        "command": "aura.clearAndReindex",
        "title": "Aura: Clear and Reindex",
        "icon": "$(refresh)"
      },
      {
        "command": "aura.createStory",
        "title": "Aura: Create Story",
        "icon": "$(add)"
      },
      {
        "command": "aura.openStory",
        "title": "Open Story",
        "icon": "$(window)"
      },
      {
        "command": "aura.refreshStories",
        "title": "Refresh Stories",
        "icon": "$(refresh)"
      },
      {
        "command": "aura.deleteStory",
        "title": "Delete Story",
        "icon": "$(trash)"
      },
      {
        "command": "aura.showHelp",
        "title": "Aura: Show Help",
        "icon": "$(question)"
      },
      {
        "command": "aura.openDocs",
        "title": "Aura: Open Documentation",
        "icon": "$(book)"
      },
      {
        "command": "aura.showCheatSheet",
        "title": "Aura: Quick Reference",
        "icon": "$(note)"
      },
      {
        "command": "aura.openGettingStarted",
        "title": "Aura: Getting Started",
        "icon": "$(rocket)"
      },
      {
        "command": "aura.showLogs",
        "title": "Aura: Show Logs",
        "icon": "$(output)"
      },
      {
        "command": "aura.openLogFile",
        "title": "Aura: Open Log File",
        "icon": "$(file)"
      },
      {
        "command": "aura.openLogFolder",
        "title": "Aura: Open Log Folder",
        "icon": "$(folder-opened)"
      },
      {
        "command": "aura.onboardWorkspace",
        "title": "Aura: Enable for Workspace",
        "icon": "$(add)"
      },
      {
        "command": "aura.findImplementations",
        "title": "Aura: Find Implementations",
        "icon": "$(symbol-interface)"
      },
      {
        "command": "aura.findCallers",
        "title": "Aura: Find Callers",
        "icon": "$(call-outgoing)"
      },
      {
        "command": "aura.showTypeMembers",
        "title": "Aura: Show Type Members",
        "icon": "$(symbol-class)"
      },
      {
        "command": "aura.createStoryFromIssue",
        "title": "Aura: Create Story from GitHub Issue",
        "icon": "$(github)"
      },
      {
        "command": "aura.refreshFromIssue",
        "title": "Refresh from Issue",
        "icon": "$(sync)"
      },
      {
        "command": "aura.postUpdateToIssue",
        "title": "Post Update to Issue",
        "icon": "$(comment)"
      },
      {
        "command": "aura.openStoryWorktree",
        "title": "Open Story Worktree",
        "icon": "$(folder-opened)"
      },
      {
        "command": "aura.showCurrentStory",
        "title": "Aura: Show Current Story",
        "icon": "$(tasklist)"
      },
      {
        "command": "aura.refreshResearch",
        "title": "Refresh Research Library",
        "icon": "$(refresh)"
      },
      {
        "command": "aura.importPaper",
        "title": "Aura: Import Paper",
        "icon": "$(cloud-download)"
      },
      {
        "command": "aura.searchResearch",
        "title": "Aura: Search Research Library",
        "icon": "$(search)"
      },
      {
        "command": "aura.openSource",
        "title": "Open Source",
        "icon": "$(link-external)"
      },
      {
        "command": "aura.deleteSource",
        "title": "Delete Source",
        "icon": "$(trash)"
      },
      {
        "command": "aura.convertToMarkdown",
        "title": "Convert to Markdown",
        "icon": "$(markdown)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "aura.refreshStatus",
          "when": "view == aura.status",
          "group": "navigation"
        },
        {
          "command": "aura.refreshStories",
          "when": "view == aura.stories",
          "group": "navigation"
        },
        {
          "command": "aura.createStory",
          "when": "view == aura.stories",
          "group": "navigation"
        },
        {
          "command": "aura.refreshResearch",
          "when": "view == aura.research",
          "group": "navigation"
        },
        {
          "command": "aura.importPaper",
          "when": "view == aura.research",
          "group": "navigation"
        },
        {
          "command": "aura.refreshStatus",
          "when": "view == aura.agents",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "aura.indexWorkspace",
          "when": "view == aura.status && viewItem == indexHealth",
          "group": "inline"
        },
        {
          "command": "aura.clearAndReindex",
          "when": "view == aura.status && viewItem == indexHealth",
          "group": "navigation"
        },
        {
          "command": "aura.indexWorkspace",
          "when": "view == aura.status && viewItem == rag",
          "group": "inline"
        },
        {
          "command": "aura.clearAndReindex",
          "when": "view == aura.status && viewItem == rag",
          "group": "navigation"
        },
        {
          "command": "aura.deleteStory",
          "when": "view == aura.stories && viewItem == story",
          "group": "inline"
        },
        {
          "command": "aura.openSource",
          "when": "view == aura.research && viewItem == source",
          "group": "inline"
        },
        {
          "command": "aura.convertToMarkdown",
          "when": "view == aura.research && viewItem == source",
          "group": "navigation"
        },
        {
          "command": "aura.deleteSource",
          "when": "view == aura.research && viewItem == source",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aura.createStory",
        "key": "ctrl+shift+w",
        "mac": "cmd+shift+w",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "aura.indexWorkspace",
        "key": "ctrl+alt+i",
        "mac": "cmd+alt+i",
        "when": "workspaceFolderCount > 0"
      },
      {
        "command": "aura.showHelp",
        "key": "ctrl+shift+/",
        "mac": "cmd+shift+/"
      },
      {
        "command": "aura.showCurrentStory",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "walkthroughs": [
      {
        "id": "aura.gettingStarted",
        "title": "Get Started with Aura",
        "description": "Learn how to use Aura for AI-assisted development",
        "steps": [
          {
            "id": "aura.walkthrough.checkServices",
            "title": "Check Services are Running",
            "description": "Aura needs its backend services running. Check the **System Status** panel to see if API and Ollama are connected.\n\n[Check Status](command:aura.refreshStatus)",
            "media": {
              "markdown": "resources/walkthrough/check-services.md"
            }
          },
          {
            "id": "aura.walkthrough.indexCode",
            "title": "Index Your Codebase",
            "description": "Index your project so Aura understands your code. This powers semantic search and code-aware chat.\n\n[Index Workspace](command:aura.indexWorkspace)",
            "media": {
              "markdown": "resources/walkthrough/index-code.md"
            }
          },
          {
            "id": "aura.walkthrough.createStory",
            "title": "Create Your First Story",
            "description": "Stories are multi-step development tasks. Describe what you want to build and Aura creates a plan.\n\n[Create Story](command:aura.createStory)",
            "media": {
              "markdown": "resources/walkthrough/create-story.md"
            }
          },
          {
            "id": "aura.walkthrough.learnMore",
            "title": "Learn More",
            "description": "Explore the full documentation for detailed guides on stories, chat, and all features.\n\n[Open Documentation](command:aura.openDocs)",
            "media": {
              "markdown": "resources/walkthrough/learn-more.md"
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "Aura",
      "properties": {
        "aura.apiUrl": {
          "type": "string",
          "default": "http://localhost:5300",
          "description": "URL for the Aura API"
        },
        "aura.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "URL for the Ollama service"
        },
        "aura.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh status every 10 seconds"
        },
        "aura.executionTimeout": {
          "type": "number",
          "default": 120000,
          "description": "Timeout in milliseconds for agent execution (default: 2 minutes)"
        },
        "aura.storyTimeout": {
          "type": "number",
          "default": 60000,
          "description": "Timeout in milliseconds for story operations like creation (default: 1 minute)"
        },
        "aura.indexingTimeout": {
          "type": "number",
          "default": 300000,
          "description": "Timeout in milliseconds for RAG indexing operations (default: 5 minutes)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "ui-test": "extest setup-and-run out/ui-test/uiTest.js --code_version max --code_settings ./test-settings.json",
    "ui-test:setup": "extest get-vscode --code_version max && extest get-chromedriver",
    "ui-test:run": "extest run-tests out/ui-test/uiTest.js",
    "compile:tests": "tsc -p tsconfig.test.json"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "mocha": "^11.7.5",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "vscode-extension-tester": "^8.19.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2"
  }
}
